<Window x:Class="serega_kursa4.selectProducts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:serega_kursa4"
        mc:Ignorable="d"
        Title="selectProducts" Height="1080" Width="1200">
    <Grid Background="{StaticResource BackGroundColor}" >
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition  />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <!-- Поиск и фильтрация -->
        <StackPanel Width="670" Orientation="Horizontal" HorizontalAlignment="Center"  Margin="10" Grid.Row="0">
            <TextBox Padding="5" Style="{StaticResource inputBox}" Name="search" TextChanged="searchTextChanged" Width="200" Margin="5" FontSize="16" Foreground="{StaticResource TextWhite}" Height="40" >Поиск...</TextBox>
            <ComboBox Name="categoryFilters" Width="150" Height="30" Margin="5" SelectionChanged="categoryFiltersSelectionChanged" >
                
            </ComboBox>
            <TextBox Padding="5" FontSize="16" Style="{StaticResource inputBox}" Name="QuantityTextBox" Width="120" Height="40" VerticalAlignment="Center" Foreground="{StaticResource TextWhite}" HorizontalAlignment="Right" >Количество...</TextBox>
            <Button  Style="{StaticResource NavigationButtonStyle}" Content="Добавить в корзину" Height="40" HorizontalAlignment="Right" VerticalAlignment="Center" />
        </StackPanel>

        <!--<ListView Name="productList" Grid.Row="1" SelectionMode="Single" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ProductID}" Width="50" />
                    <GridViewColumn Header="Наименование" DisplayMemberBinding="{Binding ProductName}" Width="200" />
                    <GridViewColumn Header="Категория" DisplayMemberBinding="{Binding CategoryInfo.CategoryName}" Width="150" />
                    <GridViewColumn Header="Цена" DisplayMemberBinding="{Binding Price}" Width="100" />
                    <GridViewColumn Header="Количество" DisplayMemberBinding="{Binding Quantity}" Width="100" />
                </GridView>
            </ListView.View>
        </ListView>-->

        <ItemsControl ItemsSource="{Binding Products}" Grid.Row="1">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="Gray" Margin="5" Padding="10" Width="200" Height="300">
                        <StackPanel>
                            <!-- Изображение товара -->
                            <Image Source="{Binding ImageUrl}" Stretch="Uniform" Height="150" />
                            <!-- Название товара -->
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" />
                            <!-- Цена товара -->
                            <TextBlock Text="{Binding Price, StringFormat=C}" Foreground="Green" HorizontalAlignment="Center" />
                            <!-- Кнопки управления количеством -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                <Button Content="-" Width="30" Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.DecreaseQuantityCommand}" CommandParameter="{Binding}" />
                                <TextBlock Text="{Binding QuantityInCart, FallbackValue=0}" Margin="10,0,10,0" FontWeight="Bold" />
                                <Button Content="+" Width="30" Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.IncreaseQuantityCommand}" CommandParameter="{Binding}" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>


    </Grid>
</Window>
